<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/screenSize"
    tools:context=".view.activity.MainActivity">

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="50sp"
        android:height="130sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:gravity="right|center_vertical"
        android:maxLength="13"
        android:layout_marginLeft="@dimen/screenSize"
        android:layout_marginRight="@dimen/screenSize"
        android:layout_marginEnd="@dimen/screenSize"
        android:layout_marginStart="@dimen/screenSize"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="30sp"
        android:height="60sp"
        android:background="@color/black"
        android:textColor="@color/orange"
        android:gravity="right|center_vertical"
        android:maxLength="20"
        android:layout_marginLeft="@dimen/screenSize"
        android:layout_marginRight="@dimen/screenSize"
        android:layout_marginEnd="@dimen/screenSize"
        android:layout_marginStart="@dimen/screenSize"
        app:layout_constraintTop_toBottomOf="@+id/tvValue" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/screenSize"
        app:layout_goneMarginTop="@dimen/screenSize"
        android:layout_marginLeft="@dimen/screenSize"
        android:layout_marginBottom="@dimen/screenSize"
        android:layout_marginRight="@dimen/screenSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvExpression"
        android:gravity="fill">

        <TableRow style="@style/tableRows">
            <ImageButton
                android:id="@+id/btnSqrt"
                style="@style/buttons"
                android:src="@drawable/ic_sqrt"/>

            <Button
                android:id="@+id/btnC"
                android:text="C"
                style="@style/buttons"/>

            <ImageButton
                android:id="@+id/btnBack"
                style="@style/buttons"
                android:src="@drawable/ic_back"/>

            <ImageButton
                android:id="@+id/btnDiv"
                style="@style/buttons"
                android:src="@drawable/ic_divide"/>
        </TableRow>

        <TableRow style="@style/tableRows">
            <Button
                android:id="@+id/btn7"
                android:text="7"
                style="@style/buttons"/>

            <Button
                android:id="@+id/btn8"
                android:text="8"
                style="@style/buttons"/>

            <Button
                android:id="@+id/btn9"
                android:text="9"
                style="@style/buttons"/>

            <ImageButton
                android:id="@+id/btnMultip"
                style="@style/buttons"
                android:src="@drawable/ic_multiply"/>
        </TableRow>

        <TableRow style="@style/tableRows">
            <Button
                android:id="@+id/btn4"
                android:text="4"
                style="@style/buttons"/>

            <Button
                android:id="@+id/btn5"
                android:text="5"
                style="@style/buttons"/>

            <Button
                android:id="@+id/btn6"
                android:text="6"
                style="@style/buttons"/>

            <ImageButton
                android:id="@+id/btnSub"
                style="@style/buttons"
                android:src="@drawable/ic_minus"/>
        </TableRow>

        <TableRow style="@style/tableRows">
            <Button
                android:id="@+id/btn1"
                android:text="1"
                style="@style/buttons"/>

            <Button
                android:id="@+id/btn2"
                android:text="2"
                style="@style/buttons"/>

            <Button
                android:id="@+id/btn3"
                android:text="3"
                style="@style/buttons"/>

            <ImageButton
                android:id="@+id/btnAdd"
                style="@style/buttons"
                android:src="@drawable/ic_plus"/>
        </TableRow>

        <TableRow style="@style/tableRows">
            <Button
                android:id="@+id/btn0"
                android:text="0"
                style="@style/buttons"/>

            <Button
                android:id="@+id/btnDecimal"
                android:text=","
                style="@style/buttons"/>

            <Button
                android:id="@+id/btnEqual"
                android:text="="
                style="@style/buttons" />

            <Button
                android:id="@+id/btnClose"
                android:text="@string/exit"
                style="@style/buttons"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>