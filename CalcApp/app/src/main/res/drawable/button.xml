<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/gradientEnd1"
                android:startColor="@color/gradientStart1"
                android:type="linear"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
            <size android:width="@dimen/buttonSize" android:height="@dimen/buttonSize"/>
            <stroke android:width="1dp" android:color="@color/buttonPressColor"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:endColor="@color/white"
                android:startColor="@color/gradientStart2"
                android:type="linear"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"/>
            <size android:width="@dimen/buttonSize" android:height="@dimen/buttonSize"/>
            <stroke android:width="0.5dp" android:color="@color/buttonColor"/>
        </shape>
    </item>
</selector>