<resources>
    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:tint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="ColorAccentStyle">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TitleFontStyle" parent="@style/TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/indie_flower</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomFontStyle">
        <item name="android:fontFamily">@font/indie_flower</item>
    </style>
</resources>