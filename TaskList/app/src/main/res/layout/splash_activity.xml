<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".ui.activity.">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        style="@style/CustomFontStyle"
        android:textSize="@dimen/splash_font_size"
        android:textStyle="bold"/>

    <ProgressBar
        app:theme="@style/ColorAccentStyle"
        android:id="@+id/pbInitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/min_padding_progress"
        android:minWidth="@dimen/min_width_progress"
        android:minHeight="@dimen/min_height_progress"/>
</LinearLayout>